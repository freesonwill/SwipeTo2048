<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    xmlns:app="http://schemas.huawei.com/apk/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$graphic:background_ability_main"
    >

    <Text
        ohos:id="$+id:highest_score"
        ohos:height="50vp"
        ohos:width="match_content"
        ohos:auto_font_size="true"
        ohos:horizontal_center="true"
        ohos:text="最高纪录：0"
        ohos:text_color="#00ff00"
        ohos:top_margin="10vp"
        />

    <Text
        ohos:id="$+id:score"
        ohos:height="50vp"
        ohos:width="match_content"
        ohos:auto_font_size="true"
        ohos:below="$id:highest_score"
        ohos:horizontal_center="true"
        ohos:text="总分数：0"
        ohos:text_color="#ff0000"
        />

    <com.freesonwill.swipeTo2048.view.BoardView
        ohos:id="$+id:board"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="#BBADA0"
        ohos:below="$id:score"
        ohos:left_margin="20vp"
        ohos:padding="10vp"
        ohos:right_margin="20vp"
        ohos:top_margin="20vp"
        app:cellSpacing="10vp"
        app:column="5"
        app:row="7"
        />

    <Button
        ohos:id="$+id:reset"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:align_parent_bottom="true"
        ohos:background_element="$graphic:selector_button"
        ohos:bottom_margin="50vp"
        ohos:bottom_padding="10vp"
        ohos:horizontal_center="true"
        ohos:left_padding="20vp"
        ohos:right_padding="20vp"
        ohos:text="重玩"
        ohos:text_color="#ffffff"
        ohos:text_size="30fp"
        ohos:top_margin="20vp"
        ohos:top_padding="10vp"
        />


</DependentLayout>